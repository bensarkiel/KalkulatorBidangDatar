<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:background="#0A192F"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtJudul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kalkulator Bidang Datar"
        android:textSize="20sp"
        android:textColor="#A0ABC9"
        android:fontFamily="sans-serif-medium"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Panjang / Alas / Diameter (cm)"
        android:textColor="#A0ABC9"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/txtJudul"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30sp"/>

    <EditText
        android:id="@+id/edt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:textColor="#A0ABC9"
        android:backgroundTint="#A0ABC9"
        app:layout_constraintTop_toBottomOf="@+id/txt1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lebar / Tinggi (cm)"
        android:textColor="#A0ABC9"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/edt1"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/edt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:textColor="#A0ABC9"
        android:backgroundTint="#A0ABC9"
        app:layout_constraintTop_toBottomOf="@+id/txt2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Persegi"
        android:backgroundTint="#233554"
        android:textColor="#A0ABC9"
        app:layout_constraintTop_toBottomOf="@+id/edt2"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnS"/>

    <Button
        android:id="@+id/btnS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Segitiga"
        android:backgroundTint="#233554"
        android:textColor="#A0ABC9"
        app:layout_constraintTop_toBottomOf="@+id/edt2"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnP"
        />

    <Button
        android:id="@+id/btnL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lingkaran"
        android:backgroundTint="#233554"
        android:textColor="#A0ABC9"
        app:layout_constraintTop_toBottomOf="@+id/edt2"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@+id/btnS"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Luas Bidang"
        android:textStyle="bold"
        android:textColor="#A0ABC9"
        android:fontFamily="sans-serif-medium"
        android:textSize="17sp"
        app:layout_constraintTop_toBottomOf="@+id/btnP"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/htgL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="18dp"
        android:textColor="#A0ABC9"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/txt3"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/txt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keliling Bidang"
        android:textStyle="bold"
        android:textColor="#A0ABC9"
        android:fontFamily="sans-serif-medium"
        android:textSize="17sp"
        app:layout_constraintTop_toBottomOf="@+id/htgL"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/htgK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="18dp"
        android:textColor="#A0ABC9"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/txt4"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>